<div class="topline">
  <%= partial(:"shared/tabs") %>
</div> <!-- topline -->
<div class="unit-right">
  <div class="pam">
    <a href="<%=h url_path("overview") %>">Back</a>
  </div> <!-- pam -->            
</div> <!-- unit-right -->
<h1 class="pam">Log #<%=h @log['_id'] %></h1>
<ul class="list">
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Url:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <%=h @log['url'] %>
    </div> <!-- unit -->
  </li>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Controller:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <%=h @log['controller'] %>
    </div> <!-- unit -->
  </li>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Action:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <%=h @log['action'] %>
    </div> <!-- unit -->
  </li>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">IP:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <%=h @log['ip'] %>
    </div> <!-- unit -->
  </li>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Runtime:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <%=h @log['runtime'] %> ms
    </div> <!-- unit -->
  </li>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Params:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <pre>
        <%=h @log['params'] %>
      </pre>
    </div> <!-- unit -->
  </li>
  <% unless @log['messages']['error'].blank? %>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Error message:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <pre><%=h @log['messages']['error'].join("\n") %></pre>
    </div> <!-- unit -->
  </li>
  <% end %>
  <% unless @log['messages']['info'].blank? %>
  <li class="outer pvs phm">
    <div class="unit size1of5">
      <span class="pale">Info message:</span>
    </div> <!-- unit -->
    <div class="unit size4of5">
      <pre><%=h @log['messages']['info'].join("\n") %></pre>
    </div> <!-- unit -->
  </li>
  <% end %>
</ul>
